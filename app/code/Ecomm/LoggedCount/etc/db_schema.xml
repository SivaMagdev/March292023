<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_logged_count" resource="default" engine="innodb" comment="customer logged">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
          <column xsi:type="int" name="customer_id" comment="customer_id"/>
           <column xsi:type="varchar" name="customer_name"   comment="Customer Name"/>   
           <column xsi:type="varchar" name="company"   comment="company Name"/>  
            <column xsi:type="varchar" name="bill_state"   comment="bill tate Name"/> 
             <column xsi:type="varchar" name="sales_repo"   comment="sales_repo"/>     
            <column xsi:type="varchar" name="customer_login" 
                  comment="customer Date"/>  
           <column xsi:type="varchar" name="year"   comment="Year"/>      
           <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>  
      
</schema>
