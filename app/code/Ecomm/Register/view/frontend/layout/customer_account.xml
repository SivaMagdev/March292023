<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Downloadable product link -->
        <referenceBlock name="customer-account-navigation-downloadable-products-link" remove="true"/>
        <!-- Gift card link -->
        <referenceBlock name="customer-account-navigation-gift-card-link" remove="true"/>
        <!-- Gift registry -->
        <referenceBlock name="customer-account-navigation-giftregistry-link" remove="true"/>
        
        <!-- My credit card link -->
        <referenceBlock name="customer-account-navigation-my-credit-cards-link" remove="true"/>
        <!-- My Invitation link -->
        <referenceBlock name="customer-account-navigation-magento-invitation-link" remove="true"/>
	<!-- Store credit --> 
   	<referenceBlock name="customer-account-navigation-customer-balance-link" remove="true"/>
	<!-- Product review link --> 
  	<referenceBlock name="customer-account-navigation-product-reviews-link" remove="true"/>
	<!-- Newsletter Subscription link --> 
   	<referenceBlock name="customer-account-navigation-return-history-link" remove="true"/>
	<!-- My returns link -->
	<referenceBlock name="customer-account-navigation-newsletter-subscriptions-link" remove="true"/>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-company-edit-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Company Information</argument>
                    <argument name="path" xsi:type="string">customer/company/edit</argument>
                    <argument name="sortOrder" xsi:type="number">180</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-business-edit-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Business Identification</argument>
                    <argument name="path" xsi:type="string">customer/business/edit</argument>
                    <argument name="sortOrder" xsi:type="number">180</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-trade-edit-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Trade Information</argument>
                    <argument name="path" xsi:type="string">customer/trade/edit</argument>
                    <argument name="sortOrder" xsi:type="number">180</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-bank-edit-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Bank Information</argument>
                    <argument name="path" xsi:type="string">customer/bank/edit</argument>
                    <argument name="sortOrder" xsi:type="number">180</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-promotional-subscription-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Promotional Subscription</argument>
                    <argument name="path" xsi:type="string">newsletter/manage</argument>
                    <argument name="sortOrder" xsi:type="number">180</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-bank-edit-link" remove="true" />
    </body>
</page>
