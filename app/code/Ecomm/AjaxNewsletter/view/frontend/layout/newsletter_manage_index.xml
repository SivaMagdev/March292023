<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    
        <!-- and for the page title: -->
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Promotional Subscription</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Customer\Block\Newsletter" name="customer_newsletter" cacheable="false" template="Ecomm_AjaxNewsletter::form/newsletter.phtml"/>
        </referenceContainer>
    </body>
</page>