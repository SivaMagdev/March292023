<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="boolean" name="shadow_login" default="0" nullable="false" comment="Using Shadow Login"/>
        <column xsi:type="varchar" name="shadow_login_name" nullable="false" length="128" comment="Shadow Login Name" />
    </table>
    <table name="company" resource="default">
        <column xsi:type="varchar" name="company_name" nullable="true" length="255" comment="Company Name"/>
    </table>
</schema>