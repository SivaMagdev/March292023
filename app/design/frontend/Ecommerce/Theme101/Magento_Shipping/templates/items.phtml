            <?php if($podDetails['tracking_link']) : ?>
            <dt class="pod-track-link-title"><?= __('Tracking URL:') ?> </dt><dd class="pod-track-link-content"><a href="<?= $podDetails['tracking_link']; ?>" target="_blank"><?= $podDetails['tracking_link']; ?></a></dd>
            <?php endif; ?>
        </dl>
    <?php endif; ?>
